<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>



    <% if(email) { %>
      <form method="POST" action="/logout">
        <label style = color:aqua><b>Logged in as: <%= email %> &nbsp</b></label>
        <button type=submit value = "Logout" style = "background-color:#625f92; border: 2px solid #9b370f; font-weight: bold" >Logout</button>
      </form>
    <%} else {%>

      <form method="GET" action="/login">
        <button type=submit value = "login" style = "background-color:#c77a47; border: 2px solid #9b370f; font-weight: bold">Login</button>
      </form>
      <span style="display:inline-block; width: 20px;"></span>
      <form method="GET" action="/register">
        <button type=submit value = "Register" style = "background-color:#a76e94; border: 2px solid #9b370f ; font-weight: bold">Register</button>
        </form>
    <%}%>

  </nav>
</header>